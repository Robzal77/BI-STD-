			            USERELATIONSHIP(dim_org_greenbridge_hierarchy_master[Site_Name], Aux_Site_Filter_Table[SiteName])
			        ),
			        CALCULATE(
			            [Emissions Period 1],
			            dim_org_greenbridge_hierarchy_master[Site_Name] IN VALUES(Aux_Site_Filter_Table[SiteName])
			        ),
			        0
			    )
			)
