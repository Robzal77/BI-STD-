	measure 'Emissions Period 1' = ```
			
			
			VAR Period = MAX('Period 1'[Year])
			
			VAR FinalDate = 
			    CALCULATE(
			        MAX(dim_calendar[Date]),
			        FILTER(
			            ALLSELECTED(dim_calendar),
			            dim_calendar[Year] = Period
			        )
			    )
			
			RETURN
			CALCULATE(
			    [Total - Scope 1 and 2 Emissions],
			    FILTER(
			        ALLSELECTED(dim_calendar),
			        dim_calendar[Date] = FinalDate
			    ),
			    'Period Filter'[ViewType] = "YTD",
			    dim_org_greenbridge_hierarchy_master[Plant_Type] = "BOP"
			)
